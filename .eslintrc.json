{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "plugins": ["html"],
  "settings": {
    "html/html-extensions": [".html"]
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "rules": {
    "no-var": "off",
    "prefer-const": "off"
  },
  "overrides": [
    {
      "files": ["*.html"],
      "rules": {
        "no-unused-vars": "off",
        "no-undef": "off"
      }
    }
  ]
} 